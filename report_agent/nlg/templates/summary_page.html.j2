<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <title>Weekly Report — Report Agent</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <style>
    :root { 
      --bg:#0a0a0f; 
      --fg:#fff4e4; 
      --muted:#8d8d8d; 
      --card:#1a1a24; 
      --accent:#8ce8ab;
      --accent-hover:#a0f0c0;
      --border:#3c4043;
      --highlight:#ff7130;
    }
    * { box-sizing: border-box; }
    body {
      margin:0;
      background:var(--bg);
      color:var(--fg);
      font: 16px/1.5 system-ui, -apple-system, Segoe UI, Roboto, Ubuntu, Cantarell, Noto Sans, "Helvetica Neue", Arial, "Apple Color Emoji","Segoe UI Emoji";
    }
    header {
      padding: 24px 20px;
      border-bottom: 1px solid var(--border);
      background: linear-gradient(180deg, #292086, #1a1a2e);
      position: sticky;
      top: 0;
      z-index: 100;
    }
    .logo {
      height: 32px;
      margin-right: 16px;
      vertical-align: middle;
    }
    .header-content {
      display: flex;
      align-items: center;
    }
    .wrap { max-width: 1100px; margin: 0 auto; padding: 24px 20px; }
    h1 { margin: 0 0 6px; font-size: 28px; font-weight: 600; }
    .meta { color: var(--muted); font-size: 13px; }
    .card {
      background: var(--card);
      border: 1px solid var(--border);
      border-radius: 12px;
      padding: 24px;
      margin: 20px 0;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }
    .narrative {
      font-size: 17px;
      line-height: 1.7;
    }
    .narrative h2 {
      font-size: 22px;
      margin-top: 1.5em;
      margin-bottom: 0.8em;
      color: var(--fg);
      font-weight: 600;
    }
    .narrative h3 {
      font-size: 18px;
      margin-top: 1.2em;
      margin-bottom: 0.6em;
      color: var(--fg);
      font-weight: 600;
    }
    .narrative ul, .narrative ol {
      margin: 0.8em 0;
      padding-left: 1.5em;
    }
    .narrative li {
      margin: 0.5em 0;
    }
    .narrative p {
      margin: 1em 0;
    }
    .narrative hr {
      display: none;
    }
    .narrative strong {
      color: var(--highlight);
      font-weight: 600;
    }
    .narrative ul li::marker {
      color: var(--accent);
    }
    .grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(280px, 1fr)); gap: 14px; }
    img.plot {
      width: 100%;
      height: auto;
      display: block;
      border-radius: 10px;
      border: 1px solid var(--border);
      background:rgba(60, 64, 67, 0.2);
      cursor: pointer;
      transition: transform 0.2s, box-shadow 0.2s;
    }
    img.plot:hover {
      transform: scale(1.02);
      box-shadow: 0 4px 12px rgba(140, 232, 171, 0.3);
    }
    a { color: var(--accent); text-decoration: none; }
    a:hover { text-decoration: underline; }
    pre, code {
      background: rgba(60, 64, 67, 0.3);
      border:1px solid var(--border);
      padding: .6em .8em;
      border-radius: 8px;
      overflow:auto;
    }
    .nav-link:hover {
      background: var(--accent);
      border-color: var(--accent);
      color: var(--bg);
      text-decoration: none;
    }
    .section-title {
      margin: 8px 0 6px;
      font-size: 14px;
      text-transform: uppercase;
      letter-spacing: .08em;
      color: var(--muted);
    }
    .narrative :is(h1,h2,h3){ margin-top: 1.2em; }

    .metric-title { margin-top: 0; font-size: 16px; }
    .metric-link { font-size: 12px; color: var(--muted); margin-top: 4px; }
    
    /* Lightbox styles */
    .lightbox {
      display: none;
      position: fixed;
      z-index: 1000;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.9);
      backdrop-filter: blur(4px);
    }
    .lightbox.active {
      display: flex;
      align-items: center;
      justify-content: center;
    }
    .lightbox-content {
      max-width: 90%;
      max-height: 90%;
      position: relative;
    }
    .lightbox img {
      max-width: 100%;
      max-height: 90vh;
      border-radius: 8px;
      box-shadow: 0 8px 32px rgba(0, 0, 0, 0.5);
    }
    .lightbox-close {
      position: absolute;
      top: -40px;
      right: 0;
      color: #fff;
      font-size: 32px;
      font-weight: bold;
      cursor: pointer;
      background: rgba(0, 0, 0, 0.5);
      border-radius: 50%;
      width: 36px;
      height: 36px;
      display: flex;
      align-items: center;
      justify-content: center;
      line-height: 1;
    }
    .lightbox-close:hover {
      background: rgba(0, 0, 0, 0.8);
    }
    .lightbox-caption {
      color: #fff;
      text-align: center;
      margin-top: 12px;
      font-size: 14px;
    }
  </style>
</head>
<body>
  <header>
    <div class="wrap">
      <div class="header-content">
        <img src="img/Gnosis (1).svg" alt="Gnosis" class="logo" />
        <div>
          <h1>Weekly Report</h1>
          <div class="meta">
            Week of {{ generated_at }} · AI-powered insights from ClickHouse + dbt
          </div>
        </div>
      </div>
    </div>
  </header>

  <main class="wrap">
    <!-- Summary narrative -->
    <section class="card narrative">
      {{ summary_html | safe }}
    </section>

    {% if highlighted_metrics %}
      <!-- Key charts for highlighted metrics -->
      <section class="card">
        <div class="section-title">Key Visuals</div>
        <p style="color: var(--muted); font-size: 14px; margin: 8px 0 16px;">Charts for metrics that changed this week (click to enlarge)</p>
        <div class="grid">
          {% for metric, display_name in highlighted_metrics %}
            <figure>
              <h3 class="metric-title">{{ display_name }}</h3>
              {% set imgs = plots_by_metric.get(metric, []) %}
              {% for img in imgs %}
                <img class="plot" src="{{ img }}" alt="{{ display_name }} plot {{ loop.index }}" data-plot-index="{{ loop.index0 }}" />
              {% endfor %}
              <figcaption class="metric-link">
                Full report:
                {% for m, dname, html_name in per_metric_reports %}
                  {% if m == metric %}
                    <a href="{{ html_name }}">{{ dname }}</a>
                  {% endif %}
                {% endfor %}
              </figcaption>
            </figure>
          {% endfor %}
        </div>
      </section>
    {% endif %}

    <!-- All per-metric reports -->
    <section class="card">
      <div class="section-title">Detailed Analysis</div>
      <p style="color: var(--muted); font-size: 14px; margin: 8px 0 16px;">Click any metric below to view detailed analytical findings</p>
      <ul style="list-style: none; padding: 0; margin: 0;">
        {% for metric, display_name, html_name in per_metric_reports %}
          <li style="margin: 8px 0;">
            <a href="{{ html_name }}" style="display: inline-block; padding: 8px 16px; background: var(--card); border: 1px solid var(--border); border-radius: 6px; color: var(--fg); text-decoration: none; transition: all 0.2s; width: 100%;">
              {{ display_name }}
            </a>
          </li>
        {% endfor %}
      </ul>
    </section>
  </main>

  <!-- Lightbox -->
  <div id="lightbox" class="lightbox">
    <div class="lightbox-content">
      <span class="lightbox-close">&times;</span>
      <img id="lightbox-img" src="" alt="" />
      <div class="lightbox-caption" id="lightbox-caption"></div>
    </div>
  </div>

  <script>
    (function() {
      const plots = document.querySelectorAll('img.plot');
      const lightbox = document.getElementById('lightbox');
      const lightboxImg = document.getElementById('lightbox-img');
      const lightboxCaption = document.getElementById('lightbox-caption');
      const lightboxClose = document.querySelector('.lightbox-close');

      plots.forEach(plot => {
        plot.addEventListener('click', () => {
          lightboxImg.src = plot.src;
          lightboxCaption.textContent = plot.alt || plot.getAttribute('src');
          lightbox.classList.add('active');
          document.body.style.overflow = 'hidden';
        });
      });

      function closeLightbox() {
        lightbox.classList.remove('active');
        document.body.style.overflow = '';
      }

      lightboxClose.addEventListener('click', closeLightbox);
      lightbox.addEventListener('click', (e) => {
        if (e.target === lightbox) {
          closeLightbox();
        }
      });

      // Close on Escape key
      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && lightbox.classList.contains('active')) {
          closeLightbox();
        }
      });
    })();
  </script>
</body>
</html>