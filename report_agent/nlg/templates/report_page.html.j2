<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <title>{{ title }}</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <style>
    :root { 
      --bg:#0a0a0f; 
      --fg:#fff4e4; 
      --muted:#8d8d8d; 
      --card:#1a1a24; 
      --accent:#8ce8ab;
      --accent-hover:#a0f0c0;
      --border:#3c4043;
      --highlight:#ff7130;
    }
    * { box-sizing: border-box; }
    body { 
      margin:0; 
      background:var(--bg); 
      color:var(--fg); 
      font: 16px/1.5 system-ui, -apple-system, Segoe UI, Roboto, Ubuntu, Cantarell, Noto Sans, "Helvetica Neue", Arial, "Apple Color Emoji","Segoe UI Emoji"; 
    }
    header { 
      padding: 24px 20px; 
      border-bottom: 1px solid var(--border); 
      background: linear-gradient(180deg, #292086, #1a1a2e);
      position: sticky;
      top: 0;
      z-index: 100;
    }
    .logo {
      height: 28px;
      margin-right: 12px;
      vertical-align: middle;
    }
    .header-content {
      display: flex;
      align-items: center;
    }
    .nav-bar {
      margin-top: 12px;
      padding-top: 12px;
      border-top: 1px solid var(--border);
    }
    .nav-link {
      display: inline-block;
      padding: 6px 12px;
      background: var(--card);
      border: 1px solid var(--border);
      border-radius: 6px;
      color: var(--fg);
      text-decoration: none;
      font-size: 13px;
      margin-right: 8px;
      transition: all 0.2s;
    }
    .nav-link:hover {
      background: var(--accent);
      border-color: var(--accent);
      color: var(--bg);
      text-decoration: none;
    }
    .wrap { max-width: 1100px; margin: 0 auto; padding: 24px 20px; }
    h1 { margin: 0 0 6px; font-size: 22px; font-weight: 600; }
    .meta { color: var(--muted); font-size: 13px; }
    .card { 
      background: var(--card); 
      border: 1px solid var(--border); 
      border-radius: 12px; 
      padding: 18px; 
      margin: 16px 0; 
    }
    .grid { 
      display: grid; 
      grid-template-columns: repeat(auto-fill, minmax(280px, 1fr)); 
      gap: 14px; 
    }
    img.plot { 
      width: 100%; 
      height: auto; 
      display: block; 
      border-radius: 10px; 
      border: 1px solid var(--border); 
      background:rgba(60, 64, 67, 0.2);
      cursor: pointer;
      transition: transform 0.2s, box-shadow 0.2s;
    }
    img.plot:hover {
      transform: scale(1.02);
      box-shadow: 0 4px 12px rgba(140, 232, 171, 0.3);
    }
    a { color: var(--accent); text-decoration: none; }
    a:hover { text-decoration: underline; }
    pre, code { 
      background: rgba(60, 64, 67, 0.3); 
      border:1px solid var(--border); 
      padding: .6em .8em; 
      border-radius: 8px; 
      overflow:auto; 
    }
    .section-title { 
      margin: 8px 0 6px; 
      font-size: 14px; 
      text-transform: uppercase; 
      letter-spacing: .08em; 
      color: var(--muted); 
    }
    .narrative :is(h1,h2,h3){ margin-top: 1.2em; }
    
    /* Lightbox styles */
    .lightbox {
      display: none;
      position: fixed;
      z-index: 1000;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.9);
      backdrop-filter: blur(4px);
    }
    .lightbox.active {
      display: flex;
      align-items: center;
      justify-content: center;
    }
    .lightbox-content {
      max-width: 90%;
      max-height: 90%;
      position: relative;
    }
    .lightbox img {
      max-width: 100%;
      max-height: 90vh;
      border-radius: 8px;
      box-shadow: 0 8px 32px rgba(0, 0, 0, 0.5);
    }
    .lightbox-close {
      position: absolute;
      top: -40px;
      right: 0;
      color: #fff;
      font-size: 32px;
      font-weight: bold;
      cursor: pointer;
      background: rgba(0, 0, 0, 0.5);
      border-radius: 50%;
      width: 36px;
      height: 36px;
      display: flex;
      align-items: center;
      justify-content: center;
      line-height: 1;
    }
    .lightbox-close:hover {
      background: rgba(0, 0, 0, 0.8);
    }
    .lightbox-caption {
      color: #fff;
      text-align: center;
      margin-top: 12px;
      font-size: 14px;
    }
    
    @media (max-width: 768px) {
      .grid {
        grid-template-columns: 1fr;
      }
      .nav-link {
        display: block;
        margin-bottom: 8px;
        margin-right: 0;
      }
    }
  </style>
</head>
<body>
  <header>
    <div class="wrap">
      <div class="header-content">
        <a href="index.html">
          <img src="img/Gnosis (1).svg" alt="Gnosis" class="logo" />
        </a>
        <div>
          <h1>{{ title }}</h1>
          <div class="meta">
            {% if display_name %}{{ display_name }}{% else %}{{ model }}{% endif %} · Generated: {{ generated_at }}
            {% if data_csv_path %}· Data: <a href="{{ data_csv_path }}" download>download CSV</a>{% endif %}
          </div>
        </div>
      </div>
      <div class="nav-bar">
        <a href="index.html" class="nav-link">← Back to Weekly Report</a>
      </div>
    </div>
  </header>

  <main class="wrap">
    <section class="card narrative">
      {{ narrative_html | safe }}
    </section>

    {% if image_paths and image_paths|length > 0 %}
    <section class="card">
      <div class="section-title">Plots (click to enlarge)</div>
      <div class="grid">
        {% for p in image_paths %}
        <figure>
          <img class="plot" src="{{ p }}" alt="plot {{ loop.index }}" data-plot-index="{{ loop.index0 }}" />
          <figcaption style="color:var(--muted); font-size:12px; margin-top:6px;">{{ p }}</figcaption>
        </figure>
        {% endfor %}
      </div>
    </section>
    {% endif %}
  </main>

  <!-- Lightbox -->
  <div id="lightbox" class="lightbox">
    <div class="lightbox-content">
      <span class="lightbox-close">&times;</span>
      <img id="lightbox-img" src="" alt="" />
      <div class="lightbox-caption" id="lightbox-caption"></div>
    </div>
  </div>

  <script>
    (function() {
      const plots = document.querySelectorAll('img.plot');
      const lightbox = document.getElementById('lightbox');
      const lightboxImg = document.getElementById('lightbox-img');
      const lightboxCaption = document.getElementById('lightbox-caption');
      const lightboxClose = document.querySelector('.lightbox-close');

      plots.forEach(plot => {
        plot.addEventListener('click', () => {
          lightboxImg.src = plot.src;
          lightboxCaption.textContent = plot.alt || plot.getAttribute('src');
          lightbox.classList.add('active');
          document.body.style.overflow = 'hidden';
        });
      });

      function closeLightbox() {
        lightbox.classList.remove('active');
        document.body.style.overflow = '';
      }

      lightboxClose.addEventListener('click', closeLightbox);
      lightbox.addEventListener('click', (e) => {
        if (e.target === lightbox) {
          closeLightbox();
        }
      });

      // Close on Escape key
      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && lightbox.classList.contains('active')) {
          closeLightbox();
        }
      });
    })();
  </script>
</body>
</html>